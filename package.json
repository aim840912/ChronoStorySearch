{
  "name": "maplestory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:next\" \"npm:watch:images\"",
    "dev:next": "next dev --turbopack",
    "watch:images": "node scripts/watch-images.js",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:cache": "playwright test tests/image-cache.spec.ts",
    "test:report": "playwright show-report",
    "generate-images": "node scripts/generate-image-manifest.js",
    "r2:smart-sync": "bash scripts/r2-smart-sync.sh",
    "r2:sync": "~/rclone sync public/images r2:maplestory-images/images --size-only --max-age 7d --progress --transfers=4 --retries=3 --stats=10s",
    "r2:sync-full": "~/rclone sync public/images r2:maplestory-images/images --checksum --progress --transfers=4 --retries=3",
    "r2:dry-run": "~/rclone sync public/images r2:maplestory-images/images --size-only --dry-run --stats=10s",
    "r2:upload": "echo '⚠️  警告：wrangler 上傳可能產生大量 Class B Operations！建議使用 npm run r2:smart-sync' && bash scripts/upload-to-r2-wrangler.sh",
    "r2:list": "~/rclone ls r2:maplestory-images/images | head -20",
    "r2:check": "~/rclone check public/images r2:maplestory-images/images",
    "r2:usage-report": "bash scripts/r2-usage-report.sh",
    "vercel:pause": "node scripts/vercel-manage.js pause",
    "vercel:unpause": "node scripts/vercel-manage.js unpause",
    "vercel:status": "node scripts/vercel-manage.js status"
  },
  "dependencies": {
    "@noble/ciphers": "^2.0.1",
    "@supabase/supabase-js": "^2.76.1",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "playwright": "^1.56.1",
    "tailwindcss": "^4.1.15",
    "typescript": "5.9.3",
    "wrangler": "^4.43.0"
  }
}
